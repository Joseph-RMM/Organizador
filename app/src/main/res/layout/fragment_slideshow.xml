<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.slideshow.SlideshowFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblTitulo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/menu_slideshow"
            android:textAlignment="center"
            android:textColor="#673AB7"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/lblTitulo3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tu cuenta:"
            android:textAlignment="inherit"
            android:textColor="#673AB7"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/lblUsernameConfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/lblCorreoConfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text='Si deseas eliminar tu cuenta, escribe "Eliminar cuenta" y da clic en el botÃ³n' />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txtEliminarCuenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Eliminar cuenta"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/btnEliminarCuenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Eliminar"
                app:backgroundTint="#E91E63" />
        </LinearLayout>

        <TextView
            android:id="@+id/lblInfoConfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
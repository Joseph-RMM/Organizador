<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_morado"
    android:padding="35sp"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="40dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:text="Ingresa a tu cuenta"
            android:textAlignment="center"
            android:textColor="#e7e6e8"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo:"
            android:textColor="#e7e6e8"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginBottom="13sp"
            android:background="@drawable/bg_logintxt"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:paddingLeft="15sp"
            android:paddingEnd="15sp"
            android:textColor="#430370" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contraseña:"
            android:textColor="#e7e6e8"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginBottom="13sp"
            android:background="@drawable/bg_logintxt"
            android:ems="10"
            android:inputType="textPassword"
            android:paddingLeft="15sp"
            android:paddingEnd="15sp"
            android:textColor="#430370" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner"
            android:text="Login"
            app:backgroundTint="#36015c" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="¿No tienes cuenta?"
            android:textColor="#e7e6e8"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnRegistrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/round_corner"
            android:text="Registrate"
            app:backgroundTint="#36015c" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>